[core]
# the base folder where all the workspaces will be stored
workspaces_base_folder = .workspaces

# the plugins configuration file
plugins_conf_file = .plugins.ini

# multi-value list of lookup folders for plugins.
# plugins_dirs=
#    $WORKSPACE
#    plugins

# Environment variables are expended if they exist, if the string will
# remain as is, without raising an error. This means that when infrared runs
# outside CI (WORKSPACE not defined), it will fallback to 'plugins' folder.
