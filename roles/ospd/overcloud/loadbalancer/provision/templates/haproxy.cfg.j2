global
  daemon
  group  haproxy
  log  /dev/log local0
  maxconn  10000
  pidfile  /var/run/haproxy.pid
  user  haproxy

defaults
  log  global
  mode  tcp
  retries  3
  timeout  http-request 10s
  timeout  queue 1m
  timeout  connect 10s
  timeout  client 1m
  timeout  server 1m
  timeout  check 10s

listen ceilometer
  bind {{ provisioner.topology.nodes.loadbalancer.network.internal_api.vip | ipaddr('address') }}:8777
  bind {{ provisioner.topology.nodes.loadbalancer.network.external.vip | ipaddr('address') }}:8777
  {% for x in range(provisioner.topology.nodes.controller.amount) %}
server {{ provisioner.topology.nodes.loadbalancer.controllers.name_prefix }}{{x}} {{ provisioner.topology.nodes.loadbalancer.network.internal_api.net | ipaddr('net') | ipaddr(provisioner.topology.nodes.loadbalancer.controllers.pool_start + x) | ipaddr('address') }}:8777 check fall 5 inter 2000 rise 2
  {% endfor %}

