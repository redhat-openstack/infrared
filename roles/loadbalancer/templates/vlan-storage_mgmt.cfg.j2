DEVICE={{ installer.loadbalancer.network.provision_interface }}.{{ installer.loadbalancer.network.storage_mgmnt.vlanid }}
BOOTPROTO=static
ONBOOT=yes
{% if installer.network.protocol == 'ipv6' %}
IPV6INIT=yes
IPV6_AUTOCONF=no
{% endif %}
IP{{ (installer.network.protocol == 'ipv6') | ternary('V6','') }}ADDR={{ installer.loadbalancer.network.storage_mgmnt.vip | ipaddr('address') }}
{{ (installer.network.protocol == 'ipv6') | ternary('IPV6','') }}PREFIX={{ installer.loadbalancer.network.storage_mgmnt.vip | ipaddr('prefix') }}
USERCTL=no
VLAN=yes
NM_CONTROLLED=no
