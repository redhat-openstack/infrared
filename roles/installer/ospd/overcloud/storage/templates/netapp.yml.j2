resource_registry:
    OS::TripleO::ControllerExtraConfigPre: /usr/share/openstack-tripleo-heat-templates/puppet/extraconfig/pre_deploy/controller/cinder-netapp.yaml

parameter_defaults:
    CinderEnableIscsiBackend: false
    CinderEnableNetappBackend: true
    CinderNetappBackendName: 'tripleo_netapp'
    CinderNetappLogin: "{{ private.storage.ceph.CinderNetappLogin }}"
    CinderNetappPassword: "{{ private.storage.ceph.CinderNetappPassword }}"
    CinderNetappServerHostname: "{{ private.storage.ceph.CinderNetappServerHostname }}"
    CinderNetappServerPort: '80'
    CinderNetappSizeMultiplier: '1.2'
    CinderNetappStorageFamily: 'ontap_7mode'
    CinderNetappTransportType: 'http'
{%  if 'iscsi' in installer.storage.backend %}
    CinderNetappStorageProtocol: 'iscsi'
    CinderNetappVolumeList: 'vol_rhos_auto_iscsi'
{%  elif 'nfs' in installer.storage.backend %}
    CinderNetappStorageProtocol: 'nfs'
    CinderNetappVfiler: ''
    CinderNetappVolumeList: ''
    CinderNetappVserver: ''
    CinderNetappPartnerBackendName: ''
    CinderNetappNfsShares: '/vol/vol_rhos_nfs'
    CinderNetappNfsSharesConfig: '/etc/cinder/shares.conf'
    CinderNetappNfsMountOptions: ''
{% endif %}
