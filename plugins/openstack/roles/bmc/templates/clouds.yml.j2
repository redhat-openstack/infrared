clouds:
  bmc:
    auth:
      auth_url: "{{ cloud_auth_info.auth_url }}"
      username: "{{ cloud_auth_info.username }}"
      password: "{{ cloud_auth_info.password }}"
{% if cloud_auth_info.project_id %}
      project_id: "{{ cloud_auth_info.project_id }}"
{% endif %}
{% if cloud_auth_info.project_name %}
      project_name: "{{ cloud_auth_info.project_name }}"
{% endif %}
{% if cloud_auth_info.user_domain_name %}
      user_domain_name: "{{ cloud_auth_info.user_domain_name }}"
{% endif %}
    region_name: "{{ openstack.clouds[0].region_name|default('regionOne') }}"
    interface: "{{ openstack.clouds[0].interface|default('public') }}"
    identity_api_version: "{{ openstack.clouds[0].identity_api_version|default(3) }}"
