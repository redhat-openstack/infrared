. /etc/init.d/functions

cd /etc/sysconfig/network-scripts
. ./network-functions

[ -f ../network ] && . ../network

CONFIG=${1}

need_config "${CONFIG}"

source_config

if [ ! -x /usr/sbin/brctl ]; then
    net_log $"Bridge support not available: brctl not found"
    exit 1
fi

/usr/sbin/brctl delif -- ${FROM_BRIDGE} ${DEVICE}
/usr/sbin/brctl delif -- ${TO_BRIDGE} ${PEER_NAME}
/sbin/ip link set dev ${DEVICE} down
/sbin/ip link set dev ${PEER_NAME} down
/sbin/ip link del ${DEVICE} > /dev/null

