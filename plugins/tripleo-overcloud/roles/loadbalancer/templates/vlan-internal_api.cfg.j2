DEVICE={{ loadbalancer.network.provision_interface }}.{{ loadbalancer.network.internal_api.vlanid }}
BOOTPROTO=static
ONBOOT=yes
IP{{ (install.network.protocol == 'ipv6') | ternary('V6ADDR','ADDR1') }}={{ loadbalancer.network.internal_api.vip | ipaddr('address') }}
IP{{ (install.network.protocol == 'ipv6') | ternary('V6ADDR_SECONDARIES','ADDR2') }}={{ loadbalancer.network.redis.vip | ipaddr('address') }}
{% if install.network.protocol == 'ipv4' %}
PREFIX1={{ loadbalancer.network.internal_api.vip | ipaddr('prefix') }}
PREFIX2={{ loadbalancer.network.redis.vip | ipaddr('prefix') }}
{% endif %}
{% if install.network.protocol == 'ipv6' %}
IPV6PREFIX={{ loadbalancer.network.internal_api.vip | ipaddr('prefix') }}
IPV6INIT=yes
IPV6_AUTOCONF=no
{% endif %}
USERCTL=no
VLAN=yes
NM_CONTROLLED=no
