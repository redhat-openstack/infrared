{% raw -%}
---
network_config:
{% endraw %}
{% if install.ironic and not install.remove.br.baremetal %}
- type: ovs_bridge
  name: br-baremetal
  members:
  - type: interface
    name: {{ install.br.baremetal.interface }}
    primary: true
{% if install.br.baremetal.interface != 'nic1' %}
- type: interface
  name: nic1
{% endif %}
{% else %}
- type: interface
  name: nic1
{% endif %}
  {% raw %}use_dhcp: false
  dns_servers: {{ ctlplane_dns_nameservers }}
  domain: {{ dns_search_domains }}
  addresses:
  - ip_netmask: {{ ctlplane_ip }}/{{ ctlplane_subnet_cidr }}
  routes: {{ ctlplane_host_routes }}
- type: interface
  name: nic2
  use_dhcp: false
- type: vlan
  vlan_id: {{ internal_api_vlan_id }}
  device: nic2
  addresses:
  - ip_netmask: {{ internal_api_ip }}/{{ internal_api_cidr }}
  routes: {{ internal_api_host_routes }}
- type: vlan
  vlan_id: {{ storage_vlan_id }}
  device: nic2
  addresses:
  - ip_netmask: {{ storage_ip }}/{{ storage_cidr }}
  routes: {{ storage_host_routes }}
- type: interface
  name: nic3
  use_dhcp: false
{% endraw %}
