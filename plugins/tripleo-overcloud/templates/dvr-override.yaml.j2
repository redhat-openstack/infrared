resource_registry:
{% if install.version|default(undercloud_version)|openstack_release <= 11 %}
    OS::TripleO::Compute::Net::SoftwareConfig: {{ template_base }}/network/{% if install.role is defined and install.role.files == 'networker' %}nic-configs{% else %}three-nics-vlans{% endif %}/{{ nics_subfolder }}/controller.yaml
{% else %}
    OS::TripleO::{{ (install.role.files is search("ComputeHCI")) | ternary("ComputeHCI", "Compute") }}::Net::SoftwareConfig: {{ template_base }}/network/{{ nics_subfolder }}/compute-dvr.yaml
{% endif %}
{% if install.version|default(undercloud_version)|openstack_release <= 14 %}
    OS::TripleO::{{ (install.role.files is search("ComputeHCI")) | ternary("ComputeHCI", "Compute") }}::Ports::ExternalPort: {{ install.heat.templates.basedir }}/network/ports/external.yaml
{% endif %}
