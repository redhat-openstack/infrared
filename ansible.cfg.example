[defaults]
host_key_checking = False
forks = 500
pipelining = True
timeout = 30

# 'debug' (formerly human_readable) output prints multi-line stdout/stderr
# for humans instead of JSON. It has nothing to do with debugging.
# Users can still override this value by using ANSIBLE_STDOUT_CALLBACK
stdout_callback = debug

library = contribs/ara/ara/plugins/modules
callback_plugins = contribs/ara/ara/plugins/callbacks
action_plugins = contribs/ara/ara/plugins/actions

[ara]
# http://ara.readthedocs.io/en/latest/configuration.html#configuration-ansible

# ara webserver address
# host=127.0.0.1
# port=8080

# database=postgresql+psycopg2://db_user:db_password@db_hostname:5432/db_name
# Also can be specified using: export ARA_DATABASE=...
